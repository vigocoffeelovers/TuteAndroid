            app:srcCompat="@drawable/reverso_carta"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_arb_8"
            android:layout_width="53dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-20dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_arb_9"
            android:layout_width="53dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-20dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_arb_10"
            android:layout_width="53dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-20dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="cannot_play" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mano_jugador"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:layout_height="131dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/carta_jp_1"
            android:layout_width="70dp"
            android:layout_height="107.3dp"
            android:onClick="click_card"
            app:srcCompat="@drawable/reverso_carta" />

        <ImageView
            android:id="@+id/carta_jp_2"
            android:layout_width="70dp"
            android:layout_height="107.3dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="click_card"/>

        <ImageView
            android:id="@+id/carta_jp_3"
            android:layout_width="70dp"
            android:layout_height="107.3dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="click_card"/>

        <ImageView
            android:id="@+id/carta_jp_4"
            android:layout_width="70dp"
            android:layout_height="107.3dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="click_card"/>

        <ImageView
            android:id="@+id/carta_jp_5"
            android:layout_width="70dp"
            android:layout_height="107.3dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="click_card"/>

        <ImageView
            android:id="@+id/carta_jp_6"
            android:layout_width="70dp"
            android:layout_height="107.3dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="click_card"/>

        <ImageView
            android:id="@+id/carta_jp_7"
            android:layout_width="70dp"
            android:layout_height="107.3dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="click_card"/>

        <ImageView
            android:id="@+id/carta_jp_8"
            android:layout_width="70dp"
            android:layout_height="107.3dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="click_card"/>

        <ImageView
            android:id="@+id/carta_jp_9"
            android:layout_width="70dp"
            android:layout_height="107.3dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="click_card"/>

        <ImageView
            android:id="@+id/carta_jp_10"
            android:layout_width="70dp"
            android:layout_height="107.3dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="click_card"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/triunfo"
        android:layout_width="80dp"
        android:layout_height="82dp"
        android:layout_toRightOf="@id/mano_izq"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/reverso_carta_raro"
        android:onClick="carta_triunfo"/>

    <LinearLayout
        android:id="@+id/scoreboardLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/mano_arriba"
        android:layout_toRightOf="@id/triunfo"
        android:layout_above="@id/table"
        android:onClick="laderboard"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/scoreboard_backgorund"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/allyScoreboardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/allyTeamName"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/allyTeamGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/allyTeamPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/enemyScoreboardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enemyTeamName"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/enemyTeamGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/enemyTeamPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mano_arriba"
        android:layout_above="@id/mano_jugador"
        android:layout_toRightOf="@id/mano_izq"
        android:layout_toLeftOf="@id/mano_drc"
        android:padding="5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:padding="5dp"
            android:background="@drawable/fieltro_tapete_cartas">

            <ImageView
                android:id="@+id/jugada_izquierda"
                android:layout_width="60dp"
                android:layout_height="79dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/reverso_carta_raro"
                android:onClick="jugada_arriba"/>

            <ImageView
                android:id="@+id/jugada_abajo"
                android:layout_width="60dp"
                android:layout_height="79dp"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/reverso_carta_raro"
                android:onClick="jugada_izquierda" />

            <ImageView
                android:id="@+id/jugada_arriba"
                android:layout_width="60dp"
                android:layout_height="79dp"
                android:layout_gravity="top"
                app:srcCompat="@drawable/reverso_carta_raro"
                android:onClick="jugada_abajo" />

            <ImageView
                android:id="@+id/jugada_derecha"
                android:layout_width="60dp"
                android:layout_height="79dp"
                android:layout_gravity="center"
                android:onClick="jugada_derecha"
                app:srcCompat="@drawable/reverso_carta_raro" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>