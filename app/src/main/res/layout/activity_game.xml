<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:background="@drawable/wood_background"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/mano_izq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/carta_izq_1"
            android:layout_width="70dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_izq_2"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_izq_3"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_izq_4"
