            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_izq_6"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_izq_7"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_izq_8"
