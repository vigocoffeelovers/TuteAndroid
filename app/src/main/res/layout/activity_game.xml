        <ImageView
            android:id="@+id/carta_izq_9"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_izq_10"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mano_drc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/carta_drc_1"
            android:layout_width="70dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_drc_2"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_drc_3"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_drc_4"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_drc_5"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_drc_6"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_drc_7"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_drc_8"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_drc_9"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_drc_10"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:layout_marginTop="-36dp"
            app:srcCompat="@drawable/reverso_carta_tumbada"
            android:onClick="cannot_play" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mano_arriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/mano_drc"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/carta_arb_1"
            android:layout_width="53dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_arb_2"
            android:layout_width="53dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-20dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_arb_3"
            android:layout_width="53dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-20dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_arb_4"
            android:layout_width="53dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-20dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_arb_5"
            android:layout_width="53dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-20dp"
            app:srcCompat="@drawable/reverso_carta"
            android:onClick="cannot_play" />

        <ImageView
            android:id="@+id/carta_arb_6"
            android:layout_width="53dp"
            android:layout_height="70dp"
